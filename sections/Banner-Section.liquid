{% schema %}
{
  
  "name": "Banner Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Select an image to display."
    },
    {
      "type": "text",
      "id": "button_text_1",
      "label": "Choose Gift",
      "default": "Choose Gift"
    },
    {
      "type": "url",
      "id": "button_link_1",
      "label": "Button 1 URL"
    },
    {
      "type": "text",
      "id": "button_text_2",
      "label": "Button 2 Text",
      "default": "Button 2"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Button 2 URL"
    },
    {
      "type": "text",
      "id": "text_view_1",
      "label": "Text View 1",
      "default": "Top Right Text"
    },
    {
      "type": "text",
      "id": "text_view_2",
      "label": "Text View 2",
      "default": "Center Text"
    }
  ],
  "presets": [
    {
      "name": "Banner Section",
      "category": "Custom"
    }
  ]
}

{% endschema %}
<div class="custom-image-with-buttons">
  <div class="image-container">
    <img src="{{ section.settings.image | img_url: 'master' }}" alt="Professional Image" />
    
    
    <div class="text-view top-right">
      {{ section.settings.text_view_1 }}
    </div>
    
    
    <div class="text-view center">
      {{ section.settings.text_view_2 }}
    </div>
    
    <div class="button-container top-button">
      <a href="{{ section.settings.button_link_1 }}" class="btn btn-primary">
        {{ section.settings.button_text_1 }} 
        
      </a>
    </div>
  </div>
</div>

<style>
  .custom-image-with-buttons {
    position: relative;
    text-align: center;
  }

  .image-container {
    position: relative;
  }

  .image-container img {
    width: 100%;
    height: auto;
  }

  .button-container {
    position: absolute;
    text-align: center;
  }

  .top-button {
    top: 10px; 
    left: 10px; 
    transform: translateX(0); 
  }

  .bottom-buttons {
    bottom: 10px; 
    left: 10%;
    transform: translateX(-50%);
    display: flex;
    justify-content: center;
    gap: 10px;
  }

  .text-view {
    position: absolute;
    color: #fff; /* Default text color */
    background-color: rgba(0, 0, 0, 0.5);
    padding: 10px;
    border-radius: 5px;
    font-weight: bold;
  }

  .top-right {
    top: 10px;
    right: 10px;
    transform: translateX(0); 
    text-align: right; 
  }

  .center {
    top: 10%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center; 
  }

  .btn {
    padding: 10px 20px;
    color: #fff !important; /* Text color */
    background-color: #000 !important; /* Default background color (black) */
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    border: 2px solid #000 !important; /* Border color */
    transition: background-color 0.3s, color 0.3s, border-color 0.3s;
  }

  .btn-primary {
    border-color: #000 !important; 
  }

  .btn-primary:hover {
    background-color: #ffcc00 !important; /* Yellow background on hover */
    color: #000 !important; /* Text color on hover */
    border-color: #ffcc00 !important; /* Border color on hover */
  }

  .btn-secondary {
    border-color: #000 !important; /* Border color for secondary button */
  }

  .btn-secondary:hover {
    background-color: #ffcc00 !important; /* Yellow background on hover */
    color: #000 !important; /* Text color on hover */
    border-color: #ffcc00 !important; /* Border color on hover */
  }

  .btn svg {
    margin-left: 8px; /* Space between text and icon */
    vertical-align: middle; /* Aligns icon with text */
    width: 16px; /* Adjust as needed */
    height: 16px; /* Adjust as needed */
    fill: currentColor; /* Uses the text color for the icon */
  }
</style>